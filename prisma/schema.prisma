// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma
model User {
  id         String   @id @default(uuid()) 
  name       String
  email      String   @unique
  password   String
  role       String   
  contactNo  String
  address    String
  profileImg String

  @@map("user")
}
